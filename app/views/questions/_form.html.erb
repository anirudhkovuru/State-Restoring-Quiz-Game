<%= form_for(@quiz) do |f| %>

      <%= f.label :question %>
      <%= f.text_field :question, class: 'form-control' %>

      <%= f.label :opt1 %>
      <%= f.text_field :opt1, class: 'form-control' %>

      <%= f.label :opt2 %>
      <%= f.text_field :opt2, class: 'form-control' %>

      <%= f.label :opt3 %>
      <%= f.text_field :opt3, class: 'form-control' %>

      <%= f.label :opt4 %>
      <%= f.text_field :opt4, class: 'form-control' %>

      <%= f.label :answer %>
      <%= f.select :answer, ['A', 'B', 'C', 'D', 'AB', 'AC', 'AD', 'BC', 'BD', 'CD', 'ABC', 'ABD', 'ACD', 'BCD', 'ABCD'], class: 'form-control' %>

      <%= f.label :genre %>
      <%= f.select :genre, ['History-India', 'History-Za Warudo', 'Games-Video Games', 'Games-Board Games'], class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>